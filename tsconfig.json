{
	"compileOnSave": true,
	"compilerOptions": {
		"typeRoots": [ "node_modules/@types", "node_modules/web-ext-types" ],
		"outDir": "build-ts",
		"noImplicitAny": false,
		"noEmitOnError": true,
		"removeComments": false,
		"sourceMap": true,
		"target": "ES2020",
		"lib": [ "ES2020", "dom" ],
		"strictNullChecks": false,
		"noUnusedLocals": true,
		"allowJs": true
	},
	"exclude": [
		"node_modules",
		"wwwroot"
	]
}